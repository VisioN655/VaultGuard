<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E">

    <androidx.cardview.widget.CardView
        android:id="@+id/options_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#282828"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Optionen"
                android:textColor="#E0E0E0"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="18dp"
                android:weightSum="2">

                <CheckBox
                    android:id="@+id/check_uppercase"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Großbuchstaben"
                    android:textColor="#E0E0E0"
                    android:textSize="18sp"/>

                <CheckBox
                    android:id="@+id/check_lowercase"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Kleinbuchstaben"
                    android:textColor="#E0E0E0"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">

                <CheckBox
                    android:id="@+id/check_numbers"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Zahlen"
                    android:textColor="#E0E0E0"
                    android:textSize="18sp"/>

                <CheckBox
                    android:id="@+id/check_symbols"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Symbole"
                    android:textColor="#E0E0E0"
                    android:textSize="18sp"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/length_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#282828"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/options_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="22dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Länge"
                android:textColor="#E0E0E0"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/length_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 Zeichen"
                android:textColor="#BDBDBD"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"/>

            <SeekBar
                android:id="@+id/length_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="8"
                android:progress="4"
                android:layout_marginTop="14dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8 – 16 Zeichen"
                android:textColor="#717171"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/result_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#282828"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/length_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:cardBackgroundColor="#232323"
                app:cardCornerRadius="16dp"
                android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/generated_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="— — — — — —"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center" />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="25dp">
            <Button
                android:id="@+id/generate_button"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:text="Generieren"
                android:textColor="#E0E0E0"
                android:textSize="24sp"
                android:textStyle="bold"
                android:backgroundTint="#006400"
                app:cornerRadius="16dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/copy_button"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:text="Kopieren"
                android:textColor="#E0E0E0"
                android:textSize="24sp"
                android:textStyle="bold"
                android:backgroundTint="#5232B3"
                app:cornerRadius="16dp"
                android:layout_weight="1"/>
        </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
